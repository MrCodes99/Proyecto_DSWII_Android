<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginTop="3dp"
    android:background="#1686cc">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="8dp">

        <TextView
            android:id="@+id/tvMainItemNombreCompleto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombres y Apellidos"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvMainItemDNI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:hint="DNI"
            android:textColor="#FFF"/>

        <TextView
            android:id="@+id/tvMainItemCelular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:hint="Celular"
            android:textColor="#FFF"/>

        <TextView
            android:id="@+id/tvMainItemDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:hint="DirecciÃ³n"
            android:textColor="#FFF"/>

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:alpha="0.8"
        android:background="#FFF"/>


    <TextView
        android:id="@+id/tvMainItemEdad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="8dp"
        android:hint="Edad"
        android:textSize="18sp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:textColor="#FFF"/>

</LinearLayout>